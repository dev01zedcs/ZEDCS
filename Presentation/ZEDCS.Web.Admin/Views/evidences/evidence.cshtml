
@{
    ViewBag.Title = "Evidence Add Or Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container form-page">
    <div class="row">
        <div class="col-sm-18">
            <div class="zed-tabs">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="javascript:void(0);" data-toggle="tab" data-target="#tab1">Basic</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active fade in" id="tab1">
                        <form action="">
                            <div class="form-group">
                                <label>Evidence Name</label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Evidence Formats</label>
                                <select class="form-control zed-select2" multiple>
                                    <option value="1">Image</option>
                                    <option value="2">PDF</option>
                                    <option value="3">Excel</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <a href="javascript:void(0);" class="btn btn-primary">Save</a>
                                <a href="javascript:void(0);" class="btn btn-success">Save &amp; Add Another</a>
                                <a href="evidences" class="btn btn-default">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
	$(document).ready(function(){
		$('.zed-select2').each(function(){
			$(this).select2();
		});
	});
</script>
